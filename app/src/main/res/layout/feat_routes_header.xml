<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/origin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_route_origin"
        android:text="@string/routes_origin"
        style="@style/OpenGps.Route.HeaderButton"
        />

    <TextView
        android:id="@+id/dest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_route_destination"
        android:text="@string/routes_destination"
        style="@style/OpenGps.Route.HeaderButton"
        />

</LinearLayout>