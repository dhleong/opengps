<?xml version="1.0" encoding="utf-8"?>
<net.dhleong.opengps.feat.routeinfo.RouteInfoView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large"
    android:orientation="vertical">

    <TextView
        android:id="@+id/area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="(FUL LGB SLI SNA TOA (RWY11)) TO (BUR)"
        style="@style/OpenGps.RouteInfo.Line"
        />

    <TextView
        android:id="@+id/aircraft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="/A /B /C"
        style="@style/OpenGps.RouteInfo.Line"
        />

    <TextView
        android:id="@+id/altitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="JMPQ60"
        style="@style/OpenGps.RouteInfo.Line"
        />

    <TextView
        android:id="@+id/direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="CSTN1"
        style="@style/OpenGps.RouteInfo.Line"
        />

    <TextView
        android:id="@+id/route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="SNA SLI V23 POPPR SMO125 SMO SMO311 SILEX BUR"
        style="@style/OpenGps.RouteInfo.Line"
        />

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/routeinfo_load"
        />

</net.dhleong.opengps.feat.routeinfo.RouteInfoView>